<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ebnrdwan.slider.BarsSpikeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/chartSpike"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/topLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/line_dash"
            android:layerType="software"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <View
            android:id="@+id/middleLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/line_dash"
            android:layerType="software"
            app:layout_constraintBottom_toTopOf="@id/baseLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topLine" />

        <View
            android:id="@+id/positive_bar2"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_rec2"
            app:layout_constraintEnd_toStartOf="@id/positive_bar1_wrapper"
            app:layout_constraintBottom_toTopOf="@id/baseLine" />

        <RelativeLayout
            android:id="@+id/positive_bar1_wrapper"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/baseLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.38"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="60dp"
                android:layout_height="30dp"/>
            <View
                android:id="@+id/positive_bar1"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rec2"
                android:layout_centerVertical="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38"
                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>



        <View
            android:id="@+id/baseLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/line_dash"
            android:layerType="software"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent" />


        <View
            android:id="@+id/negative_bar2"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_rec2"
            app:layout_constraintEnd_toStartOf="@id/negative_bar1"
            app:layout_constraintTop_toBottomOf="@id/baseLine" />

        <View
            android:id="@+id/negative_bar1"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectangle_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/baseLine" />


        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/line_dash"
            android:layerType="software"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>