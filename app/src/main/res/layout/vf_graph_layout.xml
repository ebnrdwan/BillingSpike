<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chartSpike"
    android:layout_width="match_parent"
    android:layout_height="@dimen/graph_height"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashed_line_height"
        android:background="@drawable/line_dash"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/middleLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashed_line_height"
        android:layerType="hardware"
        android:background="@drawable/line_dash"
        app:layout_constraintBottom_toTopOf="@id/baseLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLine" />




    <View
        android:id="@+id/baseLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashed_line_height"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/line_dash"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <View
        android:id="@+id/bottomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dashed_line_height"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/line_dash"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <View
        android:id="@+id/bottomBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/graph_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

<ebnrdwan.lib.slider.discretescrollview.DiscreteScrollView
        android:id="@+id/slider_view"
        tools:listitem="@layout/item_slider"
        tools:itemCount="5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/graph_height"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
